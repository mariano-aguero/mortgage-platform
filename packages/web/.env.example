##############################################################################
# Mortgage Platform Frontend - Environment Variables
##############################################################################
# Copy this file to .env.local for local development
# Vite requires all env vars to be prefixed with VITE_
##############################################################################

# API Configuration
# URL of the backend API (Serverless Offline for local, API Gateway for AWS)
VITE_API_URL=http://localhost:3000

# AWS Region
VITE_AWS_REGION=us-east-1

# Cognito Configuration
VITE_COGNITO_USER_POOL_ID=us-east-1_local
VITE_COGNITO_APP_CLIENT_ID=local_client
VITE_COGNITO_REGION=us-east-1

# Environment identifier
VITE_ENVIRONMENT=local

# Optional: LocalStack endpoint (for direct AWS calls if needed)
VITE_LOCALSTACK_ENDPOINT=http://localhost:4566

# Optional: Skip Cognito authentication (use mock auth for local development)
# Only set to 'true' in .env.local - NEVER in production environments
# VITE_SKIP_AUTH=true
