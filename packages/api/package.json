{
  "name": "@mortgage-platform/api",
  "version": "1.0.0",
  "description": "Backend API for mortgage platform",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "validate": "pnpm lint && pnpm typecheck && pnpm test",
    "dev": "sls offline --stage local",
    "dev:local": "sls offline --stage local",
    "deploy": "sls deploy --stage dev",
    "deploy:dev": "sls deploy --stage dev",
    "deploy:staging": "sls deploy --stage staging",
    "deploy:prod": "sls deploy --stage prod",
    "remove": "sls remove --stage dev",
    "remove:dev": "sls remove --stage dev",
    "remove:staging": "sls remove --stage staging",
    "remove:prod": "sls remove --stage prod",
    "logs": "sls logs --stage dev",
    "info": "sls info --stage dev",
    "invoke:local": "sls invoke local --stage local"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@aws-sdk/client-eventbridge": "^3.0.0",
    "@aws-sdk/client-s3": "^3.0.0",
    "@aws-sdk/client-sqs": "^3.0.0",
    "@aws-sdk/lib-dynamodb": "^3.0.0",
    "@mortgage-platform/shared": "workspace:*",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/aws-lambda": "^8.10.126",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8",
    "@typescript-eslint/parser": "^8",
    "eslint": "^9",
    "eslint-config-prettier": "^9.0.0",
    "globals": "^17.3.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "serverless": "^3.38.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-esbuild": "^1.50.0",
    "serverless-localstack": "^1.3.1",
    "serverless-offline": "^13.3.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.54.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
